<div class="container">
<p id="notice"><%= notice %></p>

<h1 class="headline">Task</h1>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>Project:</strong>
  <%= @task.project_id %>
</p>

<%= link_to 'Edit', edit_task_path(@task), :class => "btn btn-warning" %> |
<%= link_to 'Back', tasks_path, :class => "btn btn-info" %>
</div>
